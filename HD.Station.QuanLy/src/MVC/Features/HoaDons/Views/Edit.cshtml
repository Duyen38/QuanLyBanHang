@model QuanLy.src.Abstractions.Data.HoaDon

@{
    ViewData["Title"] = "Edit";
}
<h3>Chỉnh sửa thông tin hóa đơn</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="QuanLy" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHD" />
            <div class="form-group">
                <label asp-for="MaKH" class="control-label"> Mã khách hàng </label>
                <select asp-for="MaKH" class="form-control" asp-items="ViewBag.MaKH"></select>
                <span asp-validation-for="MaKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNV" class="control-label"> Mã nhân viên </label>
                <select asp-for="MaNV" class="form-control" asp-items="ViewBag.MaNV"></select>
                <span asp-validation-for="MaNV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayLapHD" class="control-label"> Ngày lập hóa đơn </label>
                <input asp-for="NgayLapHD" class="form-control" />
                <span asp-validation-for="NgayLapHD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayNhanHang" class="control-label"> Ngày nhận hàng </label>
                <input asp-for="NgayNhanHang" class="form-control" />
                <span asp-validation-for="NgayNhanHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="QuanLy" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
